<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Smart Attendance - Teacher Registration</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="shortcut icon" href="https://i.pinimg.com/474x/35/10/fd/3510fde9ffb75ed4c651ee5e26988614.jpg" type="image/x-icon">
    <link rel="stylesheet" href="/style/register.css">
</head>
<body>
    <div class="main-container">
        <div class="header">
            <h1><i class="fas fa-brain"></i>Smart Attendance</h1>
            <p>"Join our smart attendance ecosystem"</p>
            <div class="back-to-login">
                <a href="/" class="back-link">
                    <i class="fas fa-arrow-left"></i> Back to Login
                </a>
            </div>
        </div>

        <div class="registration-forms">
            <div class="registration-form">
                <div class="form-header">
                    <div class="form-icon">
                        <i class="fas fa-chalkboard-teacher"></i>
                    </div>
                    <h2>Teacher Registration</h2>
                    <p>Create educator account to manage classes and track attendance</p>
                </div>

                <form class="register-form" method="POST" action="/teacher/register" autocomplete="off">
                    <div class="form-row">
                        <div class="input-group">
                            <label for="teacher_id">Teacher ID</label>
                            <div class="input-container">
                                <input type="text" id="teacher_id" name="teacherId" class="form-input" placeholder="Enter teacher ID (e.g., GLA19081)" required>
                                <i class="fas fa-id-badge input-icon"></i>
                            </div>
                            <div class="input-feedback"></div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="input-group">
                            <label for="teacher_name">Full Name</label>
                            <div class="input-container">
                                <input type="text" id="teacher_name" name="name" class="form-input" placeholder="Enter your full name with title" required>
                                <i class="fas fa-user input-icon"></i>
                            </div>
                            <div class="input-feedback"></div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="input-group">
                            <label for="teacher_email">Email Address</label>
                            <div class="input-container">
                                <input type="email" id="teacher_email" name="email" class="form-input" placeholder="Enter your official email" required>
                                <i class="fas fa-envelope input-icon"></i>
                            </div>
                            <div class="input-feedback"></div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="input-group">
                            <label for="teacher_phone">Contact Number</label>
                            <div class="input-container">
                                <input type="tel" id="teacher_phone" name="phone" class="form-input" placeholder="Enter your contact number" required pattern="[0-9]{10}" maxlength="10">
                                <i class="fas fa-phone input-icon"></i>
                            </div>
                            <div class="input-feedback"></div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="input-group">
                            <label for="teacher_password">Password</label>
                            <div class="input-container">
                                <input type="password" id="teacher_password" name="password" class="form-input" placeholder="Create a strong password" required minlength="6">
                                <i class="fas fa-lock input-icon"></i>
                                <button type="button" class="toggle-password" onclick="togglePassword('teacher_password')">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <div class="input-feedback"></div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="input-group">
                            <label for="confirm_password">Confirm Password</label>
                            <div class="input-container">
                                <input type="password" id="confirm_password" name="confirm_password" class="form-input" placeholder="Confirm your password" required>
                                <i class="fas fa-lock input-icon"></i>
                                <button type="button" class="toggle-password" onclick="togglePassword('confirm_password')">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <div class="input-feedback"></div>
                        </div>
                    </div>

                    <div class="form-row two-columns">
                        <div class="input-group">
                            <label for="department">Department</label>
                            <div class="input-container">
                                <select id="department" name="department" class="form-input" required>
                                    <option value="">Select Department</option>
                                    <option value="CS">CSE</option>
                                    <option value="EC">EC</option>
                                    <option value="MCL">ME</option>
                                    <option value="EE">EE</option>
                                </select>
                                <i class="fas fa-building input-icon"></i>
                            </div>
                        </div>

                        <div class="input-group">
                            <label for="designation">Designation</label>
                            <div class="input-container">
                                <select id="designation" name="designation" class="form-input" required>
                                    <option value="">Select Designation</option>
                                    <option value="Professor">Professor</option>
                                    <option value="Associate Professor">Associate Professor</option>
                                    <option value="Assistant Professor">Assistant Professor</option>
                                    <option value="Lecturer">Lecturer</option>
                                    <option value="Senior Lecturer">Senior Lecturer</option>
                                </select>
                                <i class="fas fa-user-tie input-icon"></i>
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="checkbox-group">
                            <input type="checkbox" id="teacher_terms" required>
                            <label for="teacher_terms">
                                I agree to the <a href="#" class="terms-link">Terms and Conditions</a> and <a href="#" class="terms-link">Privacy Policy</a>
                            </label>
                        </div>
                    </div>

                    <button type="submit" class="register-btn">
                        <i class="fas fa-user-plus"></i>
                        Create Teacher Account
                    </button>
                </form>
            </div>
        </div>

        <!-- Footer -->
        <div class="registration-footer">
            <p>Already have an account? <a href="/" class="login-link">Sign in here</a></p>
        </div>
    </div>

    <script>
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const button = input.parentElement.querySelector('.toggle-password i');
            
            if (input.type === 'password') {
                input.type = 'text';
                button.classList.remove('fa-eye');
                button.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                button.classList.remove('fa-eye-slash');
                button.classList.add('fa-eye');
            }
        }
    </script>
</body>
</html>